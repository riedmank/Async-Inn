@model IEnumerable<AsyncInn.Models.HotelRoom>

@{
    ViewData["Title"] = "Index";
    Layout = "_Header";
}

@await Html.PartialAsync("_NavigationPartial")

<h2>Add Rooms to a Hotel</h2>

<article>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PetFriendly)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hotel)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetFriendly)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hotel.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoomNumber">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.RoomID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.RoomNumber">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</article>
